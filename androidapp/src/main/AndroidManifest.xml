<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="me.richardeldridge.androidapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
            android:allowBackup="false"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="me.richardeldridge.androidapp.MainActivity" android:exported="true"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="me.richardeldridge.androidapp.userdata.UserDataActivity" android:exported="true"
                android:label="Show User Data" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="me.richardeldridge.androidapp.MainActivity"
            />
        </activity>

    </application>
</manifest>